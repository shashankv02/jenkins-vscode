{
	"name": "jenkins-in-vscode",
	"displayName": "Jenkins in VSCode",
	"description": "Run Jenkins jobs from vscode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:jenkins-in-vscode.helloWorld",
		"onView:jobs-sub-view",
		"onView:builds-sub-view"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Jenkins Configuration",
			"properties": {
				"jenkins.view": {
					"scope": "application",
					"type": "string",
					"default": "All",
					"description": "Display only jobs in the view. Defaults to All jobs"
				},
				"jenkins.url": {
					"scope": "application",
					"type": "string",
					"default": "",
					"description": "URL to connect to Jenkins in the format https://username:password@yourjenkinsurl or https://username:token@yourjenkinsurl"
				}
			}
		},
		"commands": [
			{
                "command": "jobs-sub-view.refreshEntry",
                "title": "Jenkins: Refresh",
                "icon": {
					"light": "./media/refresh.svg",
					"dark": "./media/refresh.svg"
				}
			},
			{
                "command": "jenkins.configureURL",
                "title": "Jenkins: Configure Jenkins URL"
            }
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "jenkins-main-view",
					"title": "Jenkins",
					"icon": "media/dep.svg"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "jobs-sub-view.refreshEntry",
					"when": "view == jobs-sub-view",
					"group": "navigation"
				}
			  ]
		},
		"views": {
			"jenkins-main-view": [
				{
					"id": "jobs-sub-view",
					"name": "Jobs"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "jenkins-main-view",
				"contents": "Welcome"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"jenkins-api": "^0.3.1",
		"xml2js": "^0.4.23"
	}
}
